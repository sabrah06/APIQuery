@using APIQuery.Models
@model ErrorMetrics
@{
    ViewBag.Title = "Recipe Recommender System - Recommendation Evaluation Error Metrics";
}
<style>
    .metrics ul
    {
        list-style-type:none;
        padding: 0;
        margin: 0;
    }
    .metrics ul li {
        font-family: Arial, Helvetica, sans-serif;
        font-weight:600;
        font-size: large;
        padding:  10px 0 0 10px;
    }
</style>
<h2>Error Metrics for the Recipe Recommendations</h2>
<dic class="metrics">
    <ul>
        <li>
            Mean Absolute Error: @string.Format("{0:0.00}", Model.MeanAbsoluteError)
        </li>
        <li>
            Mean Square Error: @string.Format("{0:0.00}", Model.MeanSquareError)
        </li>
        <li>
            Root Mean Square Error: @string.Format("{0:0.00}", Model.RootMeanSquareError)
        </li>
    </ul>
</dic>

